{% extends 'base.html.twig' %}
{% import "_macros/macro.html.twig" as macro %}
{% block body %}
{% include 'tournament/_parts/_panel.twig' %}
<div class="container">
    <div class="row">

        {% if not fightsInDay %}
            <p class="text-center">Na tej stronie w dniu turnieju widoczna bÄ™dzie lista walk</p>
        {% endif %}


        {% for fightsInDay in fightsInDay %}

            <h1>{{ fightsInDay[0].day|localizeddate('none', 'full', app.request.locale, null, 'cccc') }} {{ fightsInDay[0].day | date('d-m-Y') }}</h1>

            {{ macro.table(fightsInDay, {'tournament' : false, 'order': true }) }}

        {% endfor %}
        
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $('#table-fight').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Polish.json"
                },
                "bPaginate": false,
                "dom": 'lifrtp',
                "buttons": [
                    'print'
                ],
                "order": [[ 0, "asc" ]],

            });
        });
    </script>
{% endblock %}
