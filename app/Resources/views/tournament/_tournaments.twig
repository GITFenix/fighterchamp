<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>Nazwa</th>
        {#<th>Liczba Uczestnik√≥w</th>#}
        <th>Data</th>
        <th>Miasto</th>
        <th>Miejsce</th>
        <th>Ulica</th>
    </tr>
    </thead>
    <tbody>
    {% for tournament in tournaments %}
        <tr>
            <td>{{ loop.revindex }}</td>
            <td><a href="{{ path('tournament_panel', {'id': tournament.id }) }}">{{ tournament.name }}</a></td>
            {#<td>{{ tournament.getSignUpTournament| length }} / {{ tournament.capacity }}</td>#}
            {% for schedule in tournament.schedule %}
                {% if schedule.type == 'final' %}
               <td>{{ schedule.start|date('d-m-Y') }}</td>
                {% elseif schedule.type == 'month' %}
               <td>{{ schedule.start|date('m-Y') }}</td>
                {% endif %}
            {% endfor %}
            <td>{{ tournament.city }}</td>
            <td>{{ tournament.placeName }}</td>
            <td>{{ tournament.street }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>