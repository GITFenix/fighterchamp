{%  extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <div class="row">
    <div class="col-xs-12">
        <section class="content">
            <div class="row">
                <main class="col-xs-12">
                    <div class="row">
                        <div class="title col-xs-12 text-uppercase text-center">
                            <h3>{{ tournament.name }}</h3>
                        </div>
                        <div class="date col-xs-6 text-uppercase">
                            <h4 class="text-center">data</h4>
                            <div class="row">
                                <div class="day col-xs-6 text-right">
                                    <p><strong>{{ tournament.start | date('Y-m-d') }} </strong>
                                        <br>
                                        {{ tournament.start |localizeddate('none', 'full', app.request.locale, null, 'cccc') }}</p>
                                </div>
                                <div class="hour col-xs-6">
                                    <p>godzina
                                        <br>
                                        <strong>{{ tournament.start | date('H:i') }}</strong></p>
                                </div>
                            </div>
                        </div>
                        <div class="place col-xs-6">
                            <h4 class="text-uppercase text-center">miejsce</h4>
                            <div class="row">
                                <div class="building col-xs-6 text-right">
                                    <p><strong>{{ tournament.placeName }}</strong></p>
                                </div>
                                <div class="address col-xs-6">
                                    <p>{{ tournament.city }}
                                        <br>
                                        {{ tournament.street }}
                                    </p>
                                </div>
                            </div>
                        </div>
                        <h4 class="text-uppercase text-center">uczestnicy</h4>
                        <p class="text-center"><strong>{{ users|length }} / {{ tournament.capacity }}</strong></p>
                    </div>
                    <div class="clearfix"></div>
                    <div class="key-points">

                        <h4 class="text-uppercase">harmonogram</h4>

                        <strong>Sobota (11.02.2017)</strong> <br>
                        14:30 - 15:30 - WAGA ZAWODNIKÓW <br>
                        15:30 - 16 - konferencja ustalanie par <br>
                        16:00 - 20:00 - walki sparingowe kadetów, juniorów, zawodników kategorii A
                        i walki meczowe między klubami Legia Fight Club i UniQ Fight Club <br><br>

                        <strong>Niedziela (12.02.2017)</strong><br>
                        9:30 - 10:30 waga zawodników <br>
                        10:30 - 11 - konferencja i ustalanie par <br>
                        11:00 - 17:00 - sparingi w klasach B i C, także walki kobiet <br>

                        <strong>Zapisy do 06.02.2017!</strong>

                        {#{% for schedule in tournament.schedule %}#}
                            {#<p><strong>{{ schedule.datetime| date('H:i') }}</strong><span>&mdash;</span>{{ schedule.description }}</p>#}
                        {#{%  endfor %}#}

                        <a href="{{ path('rules') }}"><h4 class="text-uppercase">regulamin</h4></a>
                        </h4>
                        <p>Wymagane:</p>
                        <ul>
                            <li>opłata startowa 35zł (płatne w siedzibie klubu albo przedpłata przelewem), opłata musi zostać uiszczona do dnia 06.02.2017!</li>
                            <li>niepełnoletni muszą posiadać badania sportowo - lekarskie oraz
                                <a href="{{ asset('documents/oświadczenie-Granda-dziecko.docx') }}">oświadczenie podpisane przez
                                    prawnego opiekuna</a></li>
                            <li>podpisane oświadczenie <a href="{{ asset('documents/oświadczenie-Granda.docx') }}"> wersja dla
                            kobiet</a> oraz <a href="{{ asset('documents/oświadczenie-Granda-kobiety.docx') }}"> wersja dla
                                        mężczyzn</a> </li>
                        </ul>
                    </div>
                </main>
                {#<aside class="col-xs-12 col-md-3">#}
                    {#<h4 class="text-uppercase text-center">wiadomości</h4>#}
                {#</aside>#}
            </div>
        </section>
    </div>
    </div>
    </div>
{%  endblock %}