<div class="col-xs-12">
    <h3>
            Liczba zapisanych: {{ signUpTournament| length }} / {{ tournament.capacity }}
    </h3>
    <table class="table table-striped">
        <thead>
            <th>#</th>
            <th>Nazwisko i Imię</th>
            <th class="text-center">Klasa</th>
            <th class="text-center">Płeć</th>
            <th class="text-center">Kat. Wagowa</th>
            <th class="text-center">Wiek</th>
        </tr>
        </thead>
        <tbody>
        {% for user in signUpTournament %}
            <tr {% if is_granted('ROLE_USER') %} {{ user.User.id == app.user.id ? "class='success'" }}{%  endif %}>
                <td>{{ loop.index }}</td>
                <td><a href="{{ path('user', {'id': user.User.id }) }}"> {{ user.User.surname }} {{ user.User.name }}</a></td>
                <td class="text-center"> {{ user.formula }} </td>
                <td class="text-center"> {{ user.User.male ?  'M' : 'K' }} </td>
                <td class="text-center"> {{ user.weight }} </td>
                <td class="text-center"> {{ user.User.birthDay |getAge }} </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>