{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} - news
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View news <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ news.id }}        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Title</strong></p>
        <p>
            {{ news.title }}        </p>

    </div>
    <div class="col-md-6">
        <p><strong>News</strong></p>
        <p>
            {{ news.news|raw }}        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Date</strong></p>
        <p>
            {% if news.date %}{{ news.date|date('Y-m-d H:i:s') }}{% endif %}        </p>

    </div></div>

<hr/>

<div class="form-group">
    <a class="btn btn-default" href="{{ path('news') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
            <a class="btn btn-primary" href="{{ path('news_edit', { 'id':  news.id }) }}">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>

            Edit
        </a>
                <a class="btn btn-info" href="{{ path('news_new') }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            New
        </a>
                <form action="{{ path('news_delete', { 'id': news.id }) }}" method="post" style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                Delete</button>
        </form>
    </div>


{% endblock %}

