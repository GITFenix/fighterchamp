{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} - New news
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>New news <span class="glyphicon glyphicon-file" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <p>
        <button type="submit" class="btn btn-primary" formnovalidate>
            Submit <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        </button>
    </p>


    {{ form_end(form) }}

    <hr/>
        <div class="form-group">
    <a class="btn btn-default" href="{{ path('news') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
            </div>

</div>
</div>


{% endblock %}

{% block javascripts %}

    <script src="http://cdn.tinymce.com/4/tinymce.min.js"></script>
    <script>tinymce.init({ selector:'textarea',height : 300 });</script>

{% endblock %}