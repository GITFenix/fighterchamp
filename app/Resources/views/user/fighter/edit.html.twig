{% extends 'base.html.twig' %}
{% block body %}
    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {% endfor %}

    {% set win, lose, draw = 0,0,0 %}

    {% for fight in user.fights %}
        {% if fight.winner %}
            {% if user.id == fight.winner.id %} {% set win = win + 1 %} {% else %}{%  set lose = lose + 1 %}
            {% endif %}
        {% elseif fight.draw %} {%  set draw = draw + 1 %}
        {% endif %}
    {% endfor %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-4 col-md-offset-4">
                {{ include('user/fighter/_profile.html.twig') }}
            </div>
            <div class="row">
                <div class="col-xs-12 col-md-6 col-md-offset-3">
                    <div id="testowe">Dupppaaaaaaaa</div>

                    <form method="POST" class="ajaxForm" action="{{ path('user_update') }}">
                        <div id="form_body">
                            {% include '/user/user_form.html.twig' with {'form': form} %}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" />
{% endblock %}
{% block javascripts %}
{{ parent() }}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <script src="{{ asset('js/main.js') }}"></script>
    <script>
        $(document).ready(function () {

            initAjaxForm();
            $('.select2').select2({placeholder: "Wybierz klub albo wpisz nowy", tags: true});

            $("#coach").hide();

            $(".setNullOnImage").click(function() {

                $.ajax({
                    type: 'POST',
                    url: "{{ path('setNullOnImage') }}",
                    success: function () {
                    }
                });
            });
        });
    </script>
{% endblock %}