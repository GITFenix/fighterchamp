{% extends 'base.html.twig' %}
{% block body %}

    {% set win, lose, draw = 0,0,0 %}

    {% for fight in fights %}
        {% if fight.winner %}
            {% if user.id == fight.winner.id %} {% set win = win + 1 %} {% else %}{%  set lose = lose + 1 %}
            {% endif %}
        {% elseif fight.draw %} {%  set draw = draw + 1 %}
        {% endif %}

    {% endfor %}


    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-4 col-md-offset-4">
                {{ include(':fighter:_profile.html.twig') }}
            </div>
            <div class="row">
                <div class="col-xs-12 col-md-6 col-md-offset-3">
                    {{ form_start(form) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.male) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.surname) }}
                    {{ form_row(form.birthDay) }}
                    {{ form_row(form.phone) }}

                    <img class='center' style="width: 180px;, height: 180px;"
                            {% if user.male %}
                         src="{{ user.imageName ? "/img/user/" ~ user.imageName  : asset('img/male.png') }}"
                            {% else %}
                         src="{{ user.imageName ? "/img/user/" ~ user.imageName  : asset('img/female.png') }}"> {% endif %}
                    >
                    {% if user.imageName %}
                    <button class="btn btn-danger setNullOnImage">Usuń Zdjęcie</button>
                    {% endif %}
                    {{ form_row(form.imageFile, {'label' : 'Zdjęcie Profilowe (opcjonalnie)'}) }}
                    {{ form_row(form.club) }}

                        <button type="submit" class="btn btn-primary" formnovalidate>Zapisz</button>
                        {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    $(".setNullOnImage").click(function() {

        $.ajax({
            type: 'POST',
            url: "{{ path('setNullOnImage') }}",
            success: function () {
                $(location).attr('href', "{{ path("my_profile") }}");
            }
        });
    });
</script>
{% endblock %}