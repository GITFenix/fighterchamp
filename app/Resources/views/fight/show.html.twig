{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-xs-offset-1">
                <table class="table-center">

                    <tr>
                        <td class="text-center">
                            <h1>
                                <a href="{{ path('user_show', {'id': fight.users[0].id }) }}">
                                    {{ fight.users[0] }}
                                </a>
                            </h1>
                            {% if fight.winner %}
                                {{ fight.users[0].id == fight.winner.id ? "<span class='label label-success'>W</span></td>" : "<span class='label label-danger'>L</span></td>" }}
                            {% elseif fight.draw %}
                                <span class='label label-warning'>D</span>
                            {% endif %}
                        </td>

                        <td class="text-center" rowspan="2">
                            <h1>vs.</h1>
                        </td>

                        <td class="text-center">
                            <h1>
                                <a href="{{ path('user_show', {'id': fight.users[1].id }) }}">
                                    {{ fight.users[1] }}
                                </a>
                            </h1>
                            {% if fight.winner %}
                                {{ fight.users[1].id == fight.winner.id ? "<span class='label label-success'>W</span></td>" : "<span class='label label-danger'>L</span></td>" }}
                            {% elseif fight.draw %}
                                <span class='label label-warning'>D</span>
                            {% endif %}
                        </td>

                    <tr>
                        <td class="text-center">
                            {% if fight.users[0].club %}
                                <h3>
                                    <a href="{{ path('club_show', {'id': fight.users[0].club.id }) }}"> {{ fight.users[0].club.name }}</a>
                                </h3>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            {% if fight.users[0].club %}
                                <h3>
                                    <a href="{{ path('club_show', {'id': fight.users[1].club.id }) }}"> {{ fight.users[1].club.name }}</a>
                                </h3>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td class="text-center">{{ fight.formula }} {{ fight.weight }} kg</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td class="text-center"><a href="{{ path('tournament_panel', {'id': fight.tournament.id }) }}"> {{ fight.tournament.name }}</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td class="text-center">{{ fight.tournament.start|date('d-m-Y') }}</td>
                        <td></td>
                    </tr>
                    {% if not fight.youtubeId %}
                    <tr>
                        <td></td>
                        <td class="text-center"><h2>Brak nagrania z walki</h2></td>
                        <td></td>
                    </tr>
                    {% endif %}
                </table>
                {% if fight.youtubeId %}
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="//www.youtube.com/embed/{{ fight.youtubeId }}"
                            allowfullscreen></iframe>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}